<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/alarm_listviewitem_shape"
        android:focusable="false">

    <!-- Title row -->
    <TextView
            android:id="@+id/titleRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:focusable="false"/>

    <!-- Trigger time row -->
    <TextView
            android:id="@+id/triggerTimeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/titleRow"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:focusable="false"/>

    <!-- Repetition row -->
    <TextView
            android:id="@+id/repetitionRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/triggerTimeRow"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            android:focusable="false"/>

    <!-- Reminder icon -->
    <ImageView
            android:id="@+id/reminderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/reminder"
            android:layout_below="@id/repetitionRow"
            android:focusable="false"/>

    <!-- Time zone icon -->
    <ImageView
            android:id="@+id/timeZoneListViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/time_zone_small"
            android:layout_below="@id/repetitionRow"
            android:layout_toRightOf="@id/reminderIcon"
            android:layout_toEndOf="@id/reminderIcon"
            android:focusable="false"/>

    <!-- Switch -->
    <Switch
            android:id="@+id/alarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="top|end"
            android:focusable="false"/>

    <!-- Sun/Moon image -->
    <ImageView
            android:id="@+id/sunMoonImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:focusable="false"/>

</RelativeLayout>