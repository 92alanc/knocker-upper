<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_alarm_creator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical"
        android:background="@color/white"
        tools:context=".activities.AlarmCreatorActivity">

    <RelativeLayout
            android:id="@+id/alarmCreatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Title -->
        <EditText
                android:id="@+id/titleBox"
                android:hint="@string/title_hint"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:inputType="textCapSentences"
                android:maxLength="20"/>

        <!-- Time picker -->
        <com.ukdev.smartbuzz.view.CustomTimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleBox"
                android:headerBackground="@color/black"
                android:background="@color/white"
                android:hapticFeedbackEnabled="true"
                android:soundEffectsEnabled="true"/>

        <!-- Divider -->
        <View
                android:id="@+id/dividerTimePicker"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/timePicker"
                android:background="@android:color/darker_gray"/>

        <!-- Snooze text -->
        <TextView
                android:id="@+id/snoozeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerTimePicker"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/snooze"
                android:textColor="@color/blue"/>

        <!-- Snooze spinner -->
        <Spinner
                android:id="@+id/snoozeSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/snoozeText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:spinnerMode="dropdown"/>

        <!-- Repetition -->
        <!-- Repetition checkbox -->
        <CheckBox
                android:id="@+id/repetitionCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/snoozeSpinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/repeat"
                android:textColor="@color/blue"
                android:checked="false"/>
        <!-- Icon -->
        <ImageView
                android:id="@+id/repetitionIcon"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/repetitionCheckBox"
                android:foregroundGravity="center"
                android:background="@color/white"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:visibility="gone"/>
        <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repetitionCheckBox"
                android:layout_toRightOf="@id/repetitionIcon"
                android:layout_toEndOf="@id/repetitionIcon"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_horizontal"
                android:visibility="gone">
            <GridLayout
                    android:id="@+id/repetitionLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <!-- Sunday button -->
                <ToggleButton
                        android:id="@+id/sundayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Monday button -->
                <ToggleButton
                        android:id="@+id/mondayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Tuesday button -->
                <ToggleButton
                        android:id="@+id/tuesdayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Wednesday button -->
                <ToggleButton
                        android:id="@+id/wednesdayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Thursday button -->
                <ToggleButton
                        android:id="@+id/thursdayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="4"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Friday button -->
                <ToggleButton
                        android:id="@+id/fridayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="5"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

                <!-- Saturday button -->
                <ToggleButton
                        android:id="@+id/saturdayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="6"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:checked="false"/>

            </GridLayout>
        </HorizontalScrollView>

        <!-- Divider -->
        <View
                android:id="@+id/dividerTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/horizontalScrollView"
                android:background="@android:color/darker_gray"/>

        <!-- Ringtone text -->
        <TextView
                android:id="@+id/ringtoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerTop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/ringtone"
                android:textColor="@color/blue"/>

        <!-- Ringtone spinner -->
        <Spinner
                android:id="@+id/ringtoneSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ringtoneText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:text="@string/ringtone"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:spinnerMode="dropdown"/>

        <!-- Ringtone test button -->
        <ImageButton
                android:id="@+id/ringtoneTestButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/horizontalScrollView"
                android:src="@drawable/play"
                android:background="@color/white"/>

        <!-- Volume text -->
        <TextView
                android:id="@+id/volumeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ringtoneSpinner"
                android:background="@color/white"
                android:text="@string/volume"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        <!-- Volume seek bar -->
        <SeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/volumeText"
                android:background="@color/white"
                android:hapticFeedbackEnabled="true"
                android:max="100"
                android:progress="50"/>

        <!-- Vibrate checkbox -->
        <CheckBox
                android:id="@+id/vibrateCheckBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/volumeSeekBar"
                android:background="@color/white"
                android:checked="false"
                android:text="@string/vibrate"
                android:textSize="15sp"/>

        <!-- Extras -->
        <!-- Time zone icon -->
        <ImageView
                android:id="@+id/timeZoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_below="@id/vibrateCheckBox"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:background="@color/white"
                android:src="@drawable/time_zone"/>

        <!-- Time zone spinner -->
        <Spinner
                android:id="@+id/timeZoneSpinner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/vibrateCheckBox"
                android:layout_toRightOf="@id/timeZoneIcon"
                android:layout_toEndOf="@id/timeZoneIcon"
                android:hapticFeedbackEnabled="true"
                android:spinnerMode="dialog"
                android:background="@color/white"
                android:prompt="@string/time_zone"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textAllCaps="false"/>

        <!-- Reminder checkbox -->
        <CheckBox
                android:id="@+id/reminderCheckBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/timeZoneIcon"
                android:background="@color/white"
                android:checked="false"
                android:text="@string/set_as_reminder"
                android:textSize="15sp"/>

        <!-- Divider -->
        <View
                android:id="@+id/dividerBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/reminderCheckBox"
                android:background="@android:color/darker_gray"/>

        <!-- Cancel/Save buttons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerBottom"
                android:weightSum="2"
                android:orientation="horizontal">
            <!-- Cancel button -->
            <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/red_light"
                    android:text="@string/cancel"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="18sp"/>
            <!-- Save button -->
            <Button
                    android:id="@+id/bottomSaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_light"
                    android:text="@string/save"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/green"
                    android:textSize="18sp"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
