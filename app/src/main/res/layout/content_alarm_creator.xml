<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_alarm_creator"
        tools:context="com.ukdev.smartbuzz.activities.AlarmCreatorActivity">

    <!-- Title -->
    <android.support.v7.widget.AppCompatEditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textSize="18sp"/>

    <!-- Time picker -->
    <com.ukdev.smartbuzz.frontend.CustomTimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleEditText"/>

    <!-- Repetition text -->
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/repetitionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/timePicker"
            android:text="@string/repeat"
            android:textSize="18sp"
            android:textColor="@color/red"/>

    <!-- Repetition layout -->
    <LinearLayout
            android:id="@+id/repetitionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repetitionTextView"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="7">
        <!-- Sunday button -->
        <ToggleButton
            android:id="@+id/sundayToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:textOff="@string/sun"
            android:textOn="@string/sun"
            android:textAllCaps="false"/>
        <!-- Monday button -->
        <ToggleButton
                android:id="@+id/mondayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/mon"
                android:textOn="@string/mon"
                android:textAllCaps="false"/>
        <!-- Tuesday button -->
        <ToggleButton
                android:id="@+id/tuesdayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/tue"
                android:textOn="@string/tue"
                android:textAllCaps="false"/>
        <!-- Wednesday button -->
        <ToggleButton
                android:id="@+id/wednesdayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/wed"
                android:textOn="@string/wed"
                android:textAllCaps="false"/>
        <!-- Thursday button -->
        <ToggleButton
                android:id="@+id/thursdayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/thu"
                android:textOn="@string/thu"
                android:textAllCaps="false"/>
        <!-- Friday button -->
        <ToggleButton
                android:id="@+id/fridayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/fri"
                android:textOn="@string/fri"
                android:textAllCaps="false"/>
        <!-- Saturday button -->
        <ToggleButton
                android:id="@+id/saturdayToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:textOff="@string/sat"
                android:textOn="@string/sat"
                android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Snooze duration text -->
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/snoozeDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repetitionLayout"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/snooze_duration"
            android:textSize="18sp"
            android:textColor="@color/red"/>

    <!-- Snooze duration spinner -->
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/snoozeDurationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repetitionLayout"
            android:layout_toEndOf="@id/snoozeDurationTextView"
            android:layout_toRightOf="@id/snoozeDurationTextView"
            android:layout_marginBottom="2.5dp"
            android:spinnerMode="dialog"
            android:prompt="@string/snooze_duration"/>

</RelativeLayout>
