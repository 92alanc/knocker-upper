<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_setup"
    tools:context="com.ukdev.smartbuzz.activities.SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">
        <!-- Name -->
        <FrameLayout
            android:id="@+id/placeholder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Time picker -->
        <FrameLayout
            android:id="@+id/placeholder_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Repetition -->
        <FrameLayout
            android:id="@+id/placeholder_repetition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Snooze duration -->
        <FrameLayout
            android:id="@+id/placeholder_snooze_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Ringtone -->
        <FrameLayout
            android:id="@+id/placeholder_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Volume -->
        <FrameLayout
            android:id="@+id/placeholder_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Vibrate -->
        <FrameLayout
            android:id="@+id/placeholder_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Sleep checker on -->
        <FrameLayout
            android:id="@+id/placeholder_sleep_checker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Wallpaper -->
        <FrameLayout
            android:id="@+id/placeholder_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Ad view -->
        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/adUnitId"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
