<resources>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="TwoLinesFragment">
        <item name="android:background">@null</item>
    </style>

    <!-- Toggle Buttons -->
    <style name="ToggleButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_toggle_button</item>
    </style>

</resources>
