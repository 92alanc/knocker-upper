<resources>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/red</item>
        <item name="icon_clear">@drawable/ic_clear</item>
        <item name="icon_day">@drawable/ic_day</item>
        <item name="icon_no_alarms">@drawable/ic_no_alarms</item>
        <item name="shape_toggle_button">@drawable/shape_toggle_button</item>
        <item name="text_colour_toggle_button">@color/toggle_text</item>
    </style>

    <style name="Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/indigo</item>
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="icon_clear">@drawable/ic_clear_light</item>
        <item name="icon_day">@drawable/ic_day_light</item>
        <item name="icon_no_alarms">@drawable/ic_no_alarms_light</item>
        <item name="shape_toggle_button">@drawable/shape_toggle_button_light</item>
        <item name="text_colour_toggle_button">@color/toggle_text_light</item>
    </style>

    <style name="Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TwoLinesFragment">
        <item name="android:background">@null</item>
    </style>

    <!-- Toggle Buttons -->
    <style name="ToggleButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/text_colour_toggle_button</item>
        <item name="android:background">?attr/shape_toggle_button</item>
    </style>

</resources>
